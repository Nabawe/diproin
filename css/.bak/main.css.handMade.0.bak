  @media only screen and (min-width:1024px) {
    header {
      width: 90%;
    }

    header nav {
      display: grid;
      gap: 20px;
      grid-template-areas:
        "nLogo nav1 nav2 nav3 nav4"
      ;
    }

    .nav__Text {
      font-size: 1.5rem;
    }

    #nLogo {
      border: none;
      background-color: unset;
      grid-area: nLogo;
      padding: 0px;
      margin: 0px;
    }

    main.asideGrid {
      /* flex: none; */ /* ¿Es necesario? */
      display: grid;
      gap: 20px;
      grid-template-areas:
        "sec1 aside"
        "sec2 aside"
      ;
      /* align-items: center; */
      /* justify-items: center; */
    }

    main section {
      margin: 0px 0px;
    }
  }

  section.sec1 {
    grid-area: sec1;
  }
  section.sec2 {
    grid-area: sec2;
  }
  section.aside {
    grid-area: aside;
  }
